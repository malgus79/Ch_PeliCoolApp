<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/img_carousel_loading"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_marginStart="@dimen/common_margin_middle"
        android:layout_marginTop="@dimen/common_margin_min"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/carousel_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_dark" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_margin_middle"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_carousel_loading"
        app:layout_constraintTop_toTopOf="@id/img_carousel_loading">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:layout_marginHorizontal="@dimen/common_margin_min"
            android:layout_marginVertical="@dimen/common_margin_min"
            android:background="@color/grey_dark"
            android:orientation="vertical" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:layout_marginHorizontal="@dimen/common_margin_min"
            android:layout_marginVertical="@dimen/common_margin_min"
            android:background="@color/grey_dark"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:layout_marginHorizontal="@dimen/common_margin_min"
            android:layout_marginVertical="@dimen/common_margin_min"
            android:background="@color/grey_dark"
            android:orientation="vertical" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_carousel_loading"
        app:layout_constraintTop_toBottomOf="@id/linear1_loading">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:layout_marginHorizontal="@dimen/common_margin_min"
            android:layout_marginVertical="@dimen/common_margin_min"
            android:background="@color/grey_dark"
            android:orientation="vertical" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:layout_marginHorizontal="@dimen/common_margin_min"
            android:layout_marginVertical="@dimen/common_margin_min"
            android:background="@color/grey_dark"
            android:orientation="vertical" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:layout_marginHorizontal="@dimen/common_margin_min"
            android:layout_marginVertical="@dimen/common_margin_min"
            android:background="@color/grey_dark"
            android:orientation="vertical" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

